{
  "name": "remote-ops-server",
  "version": "0.1.0",
  "description": "操作X主机",
  "private": true,
  "type": "module",
  "bin": {
    "remote-ops-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "start": "node build/index.js",
    "start:sse": "node build/index.js --sse"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "mcp-proxy": "^2.11.0",
    "ssh2": "^1.16.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/ssh2": "^1.15.4",
    "@types/yargs": "^17.0.33",
    "typescript": "^5.3.3"
  }
}
